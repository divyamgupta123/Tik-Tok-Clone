<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tiktokclone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TikTokClone.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".views.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.LikedVideoPlayActivity" />
        <activity
            android:name=".views.activities.LikedVideoActivity"
            android:theme="@style/Theme.TikTokClone" />
        <activity android:name=".views.activities.MainActivity">

        </activity>
    </application>

</manifest>